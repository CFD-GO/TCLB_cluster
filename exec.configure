#!/bin/bash

PP=$(dirname $0)
source $PP/conf.ini
mod_add=true
source $PP/mods.ini CONFIGURE
cd $TCLB


if hostname | grep "rysy\.icm\.edu\.pl" >/dev/null
then
    srun $SINGULARITY_COMMAND make configure
    srun $SINGULARITY_COMMAND ./configure "$@"
else
    $RUN_COMMAND make configure
    $RUN_COMMAND ./configure "$@"
fi