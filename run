#!/bin/bash

PP=$(dirname $0)
[ -f $PP/conf.ini ] || $PP/config
[ -f $PP/conf.ini ] || exit -1
. $PP/conf.ini	
. $PP/lib.bash

MODEL=$1
shift
CASE=$1
shift
TASKS=$1
shift

if [ -z "$MODEL" ] || [ -z "$CASE" ]
then
	echo Usage: ./run MODEL CASE.xml [cores]
	exit -1
fi

if [ ! -f "$CASE" ]
then
	echo No case file: $CASE
	exit -1
fi

SOLVER=$TCLB/CLB/$MODEL/main

if [ ! -f "$SOLVER" ]
then
	echo No such model: $MODEL
	echo File not found: $SOLVER
	exit -1
fi


if [ -z "$TASKS" ]
then
	TASKS=1
fi

if [ $TASKS -gt $MAX_UNITS_PER_NODE ]
then
	TASKS_PER_NODE=$MAX_UNITS_PER_NODE
	NODES=$[$TASKS/$TASKS_PER_NODE]
	CORES_PER_TASK=$CORES_PER_UNIT_FULL
else
	TASKS_PER_NODE=$TASKS
	NODES=1
fi


if [ $TASKS -ne $[$NODES*$TASKS_PER_NODE] ]
then
	echo Requested number of cores/gpus \($TASKS\) is not $NODES x $TASKS_PER_NODE
	exit -1
fi

echo "Trying to run $CASE with $MODEL model on $TASKS cores/gpus (NODESxTASKS_PER_NODExCORES_PER_TASK: $NODES x $TASKS_PER_NODE x $CORES_PER_TASK)..."

NAME=CLB:$CASE

if test "$RUN_GPU" == "y"
then
	GPU_HEADER="#SBATCH --gres=gpu:$TASKS_PER_NODE"
fi

sbatch $(arg -A $GRANT) $(arg -p $MAINQ) "$@" <<EOF
#!/bin/bash -l
#SBATCH -J $NAME
#SBATCH --nodes $NODES 
#SBATCH --ntasks $TASKS
#SBATCH --cpus-per-task $CORES_PER_UNIT
#SBATCH --ntasks-per-node=$TASKS_PER_NODE
#SBATCH --time=01:00:00 
$GPU_HEADER
 
     cd \$SLURM_SUBMIT_DIR 
echo "###### Nodes:          #######"
     srun /bin/hostname
echo "###### Loading modules #######"
	source $PP/conf.ini
	mod_add=false
	source $PP/mods.ini RUN
echo "###### --------------- #######"
echo ""
	trap "say Errored" ERR
	trap "say Terminated" TERM
	trap "say Killed" KILL
	set -e
	say Started
	$RUN_COMMAND $SOLVER $CASE
	say Finished
EOF
